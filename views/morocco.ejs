<%- include('header'); %>  
<!-----------PART1---------------->
       <div class="col-12 row">

        <div class="col-xl-4 col-md-4 mb-4">
          <div class="alert alert-warning alert-with-icon" data-notify="container">
            <span data-notify="icon" class="tim-icons icon-single-02"></span>
            <h4 class="alert-heading">TOTAL CASES</h4>
            <br>
            <span data-notify="message" class="display-2"><%= 
              data[0].confirmed %></span>
          </div>
        </div>  
        <div class="col-xl-4 col-md-6 mb-4">
          <div class="alert alert-danger alert-with-icon" data-notify="container">
            <span data-notify="icon" class="tim-icons icon-simple-remove"></span>
            <h4 class="alert-heading">TOTAL DEATHS</h4>
            <br>
            <span data-notify="message" class="display-2">
              <%= data[0].deaths %></span>

          </div>
        </div>  

      <div class="col-xl-4 col-md-6 mb-4">
        <div class="alert alert-success alert-with-icon" data-notify="container">
          <span data-notify="icon" class="tim-icons icon-minimal-down"></span>
          <h4 class="alert-heading">TOTAL RECOVERED</h4>
          <br>
          <span data-notify="message" class="display-2"><%= data[0].recovered %></span>
        </div>
     </div>  
    
    </div>
<!-----------/PART1---------------->        

<div class="col-md-12">
    <div class="card  card-plain">
      <div class="card-header">
        <h3 class="card-title">confirmed cases by moroccan regions:</h3>
        <p class="category"> last update: <%= data[0].last_updated %></p>
      </div>
      <div class="col-lg-12">
        <img src="/img/flag.png" alt="" height="60">
        </div>      
      <div class="card-body">
        <div class="table-responsive">
          <table class="table tablesorter " id="">
            <thead class=" text-primary">
              <tr>
                <th>
                    REGION
                </th>
                <th>
                  CASES
                </th>
                <th>
                  REGION CODE
                </th>
              </tr>
            </thead>
            <tbody>
              <% 
              var sorted =  data[1].sort((a, b) => (a.cases < b.cases) ? 1 : -1);
              sorted.forEach((e)=>{ %>
                <tr>
                    <td><%= e.region %></td>
                    <td><%= e.cases %></td>
                    <td><%= e.regionCode %></td>
                </tr>
                <% }) %> 
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!------------- PIE CHART 1  ---------------->
<div class="col-lg-12">
  <div class="card card-chart">
    <div class="card-header">
      <h3 class="card-title"><i class="tim-icons icon-send text-info"></i> confirmed Cases</h3>
    </div>
    <div class="card-body">
        <div class="x_content">
          <div id="echart_pie" style="height: 380px; width: 600; transparent; user-select: none; position: relative; background-color: transparent;" _echarts_instance_="ec_1585694999086">
            <div style="position: relative; overflow: hidden; width: 600; height: 380px; cursor: default;">
              <canvas width="500" height="380" data-zr-dom-id="zr_0" style="position: absolute; left: 0px; top: 0px; width: 500; height: 380; user-select: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);"></canvas>
            </div>
              </div>
        </div>        
    </div>
  </div>
</div>
<!------------- /PIE CHART 1  ---------------->

